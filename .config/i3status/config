general {
        colors = false
        interval = 30
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime date"
order += "tztime hour"

wireless _first_ {
        format_up = " %quality "
        format_down = " down "
}

ethernet _first_ {
        format_up = " %speed "
        format_down = " down "
}

battery all {
        format = " %status %percentage %remaining "
}

tztime date {
        format = " %a %d/%m "
}

tztime hour {
        format = " %H:%M     "
}


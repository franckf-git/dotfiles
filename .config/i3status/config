general {
        colors = false
        interval = 30
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime date"
order += "tztime hour"

wireless _first_ {
        format_up = " W: (%quality at %essid) %ip "
        format_down = " W: down "
}

ethernet _first_ {
        format_up = " E: %ip (%speed) "
        format_down = " E: down "
}

battery all {
        format = " %status %percentage %remaining "
}

tztime date {
        format = " %a %d/%m "
}

tztime hour {
        format = " %H:%M     "
}


general {
        colors = false
        interval = 5
}

order += "wireless wlo1"
order += "tztime hour"

wireless wlo1 {
        format_up = "  %ip  "
        format_down = "  wifi down  "
}

battery 0 {
        format = "  %status %percentage  "
        format_down = "No battery"
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime hour {
        format = "  %H:%M  "
}

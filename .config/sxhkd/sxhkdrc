#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt -e fish

super + shift + Return
	urxvt -e fish

# program launcher
super + {space,Down} 
    rofi -modi window -show window -sidebar-mode -show-icons -drun-icon-theme
super + q
    rofi -modi drun   -show drun   -sidebar-mode -show-icons -drun-icon-theme
super + s
    rifle "$(find . -type f | rofi -dmenu)"

# reload sxhkd and bspwm config
super + shift + r
    killall sxhkd && bspc wm -r
# quit bspwm
super + shift + e
    bspc quit

# volume keys
XF86AudioRaiseVolume
    pactl set-sink-volume alsa_output.pci-0000_07_00.6.analog-stereo +5%
XF86AudioLowerVolume
    pactl set-sink-volume alsa_output.pci-0000_07_00.6.analog-stereo -5%
XF86AudioMute
    pactl set-sink-mute alsa_output.pci-0000_07_00.6.analog-stereo toggle

# brightness keys
XF86MonBrightnessUp
    light -A 5
XF86MonBrightnessDown
    light -U 5

# system power
super + ctrl + Delete
    poweroff
super + ctrl + r
    reboot

#
# bspwm hotkeys
#

# close and kill
super + Delete
	bspc node -c

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super {_,shift +} Tab
    bspc node -f {next.local,prev.local}

# focus between desktop
super + {Left,Right}
	bspc desktop -f {prev,next}

super + shift + Left
	bspc node -d prev && bspc desktop -f prev
super + shift + Right
	bspc node -d next && bspc desktop -f next

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


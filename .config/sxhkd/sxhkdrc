#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt

# program launcher
super + @space
    rofi -modi window -show window -sidebar-mode -show-icons -drun-icon-theme

super + q
    rofi -modi drun -show drun -sidebar-mode -show-icons -drun-icon-theme

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%  && pactl set-sink-volume 1 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%  && pactl set-sink-volume 1 -5%
XF86AudioMute
    pactl set-sink-mute 0 toggle && pactl set-sink-mute 1 toggle

XF86MonBrightnessUp
    light -A 5
XF86MonBrightnessDown
    light -U 5

super + ctrl + Delete
    poweroff
super + ctrl + r
    reboot

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {e,r}
	bspc {quit,wm -r}

# close and kill
super + Delete
	bspc node -c

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + Tab
	bspc node -f next.local

# focus between desktop
super + {Left,Right}
	bspc desktop -f {prev,next}

super + shift + Left
	bspc node -d prev && bspc desktop -f prev

super + shift + Right
	bspc node -d next && bspc desktop -f next

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

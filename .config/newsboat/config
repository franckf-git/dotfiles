delete-read-articles-on-quit    yes
max-items                       50
keep-articles-days              30
auto-reload                     yes
download-path                   "/home/$USER/Downloads/%h/%n"
browser                         "firefox %u"

bind-key j down
bind-key k up

# open with small web browser [, + s]
macro s set browser "surf -dgNpis -a a"; open-in-browser ; set browser "firefox %u"

# open with terminal web browser [, + w]
macro w set browser "w3m"; open-in-browser ; set browser "firefox %u"

# open with terminal web browser [, + c]
macro c set browser "chromium-browser --password-store=basic --incognito "; open-in-browser ; set browser "firefox %u"

# see video in mpv [, + v]
macro v set browser "i3 exec mpv"; open-in-browser ; set browser "firefox %u"

# download video [, + t]
macro t set browser "youtube-dl --write-auto-sub --add-metadata -ic"; open-in-browser ; set browser "firefox %u"

color listfocus           white  black   bold
color listnormal          white  default dim
color listnormal_unread   white  default bold
color listfocus_unread    red    black   bold
color info                white  black   bold
color article             white  default
